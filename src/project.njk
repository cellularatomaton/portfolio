---
layout: base.njk
title: Portfolio - Walter Moore
permalink: "/projects/{{ project['project-slug'] }}/"
pagination:
  data: collections.projects
  size: 1
  alias: project
---

<section id="about" class="py-16">
  <div class="container mx-auto px-6">
    <h3 class="text-3xl font-bold text-center mb-8">{{ project.title }}</h3>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Image Section -->
      <div class="relative col-span-1">
        <!-- Project Image -->
        <div class="h-64 w-full bg-contain bg-center rounded-xl border border-gray-200 shadow-lg" style="background-image: url('img/{{ project.image }}');"></div>
        <!-- PFP Image -->
        <img src="/img/pfp.jpg" alt="{{ project.title }}" class="absolute left-2 top-2 w-24 h-24 rounded-full border-4 border-white shadow-lg">
      </div>

      <!-- Details Section -->
      <div class="col-span-2">
        <!-- Skills -->
        <div class="mb-6">
          <h4 class="text-xl font-semibold mb-2">Skills</h4>
          <div class="flex flex-wrap gap-2">
            {% for skill in project.skills %}
            <span class="inline-block px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-full">{{ skill }}</span>
            {% endfor %}
          </div>
        </div>

        <!-- Languages -->
        <div class="mb-6">
          <h4 class="text-xl font-semibold mb-2">Languages</h4>
          <div class="flex flex-wrap gap-2">
            {% for language in project.languages %}
            <span class="inline-block px-3 py-1 text-sm bg-green-100 text-green-700 rounded-full">{{ language }}</span>
            {% endfor %}
          </div>
        </div>

        <!-- Platforms -->
        <div class="mb-6">
          <h4 class="text-xl font-semibold mb-2">Platforms</h4>
          <div class="flex flex-wrap gap-2">
            {% for platform in project.platforms %}
            <span class="inline-block px-3 py-1 text-sm bg-yellow-100 text-yellow-700 rounded-full">{{ platform }}</span>
            {% endfor %}
          </div>
        </div>

        <!-- Links -->
        <div>
          <h4 class="text-xl font-semibold mb-2">Links</h4>
          <ul class="list-none space-y-2">
            {% for url in project.urls %}
            <li>
              <a href="{{ url }}" target="_blank" class="text-blue-500 underline hover:text-blue-700">{{ url }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>



<section id="about" class="py-16">
  <div class="container mx-auto px-6">
    <div class="prose mx-auto">
      {{ project.details | safe }}
    </div>
  </div>
</section>