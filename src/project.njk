---
layout: base.njk
title: Project - Walter Moore
permalink: "/projects/{{ project['project-slug'] }}/"
pagination:
  data: collections.projects
  size: 1
  alias: project
---

{% set company = project['company-slug'] | findCompany(companies) %}
<section id="about" class="py-16">
  <div class="container mx-auto px-6 flex flex-col gap-8">
    <h3 class="text-3xl font-bold text-center mb-8">{{ project.title }}</h3>
    <div class="flex flex-col md:flex-row justify-center items-center gap-8 mb-32">
      <!-- PFP Image -->
      <img src="/img/pfp.jpg" alt="{{ project.title }}" class="w-24 h-24 rounded-full border-2 border-gray-200 shadow-lg">
      <h1 class="text-3xl">+</h1>
      <!-- Company Image -->
      <a href="/companies/{{project['company-slug']}}/">
      <img src="/img/{{company.image}}" alt="{{ company.title }}" class="h-24 rounded-xl border-2 p-4 bg-minimal-white border-gray-200 shadow-lg">
      </a>
    </div>
    
    <div class="flex flex-col lg:flex-row items-stretch gap-8">
      <!-- Project Section -->
      <div class="grow shrink basis-1 aspect-square bg-cover bg-center rounded-xl border border-gray-200 shadow-lg" style="background-image: url('img/{{ project.image }}');">  
      </div>
      <!-- Details Section -->
      <div class="grow shrink basis-1 items-stretch border-2 rounded-xl p-4">

        {% if project.skills and project.skills.length > 0 %}
        <!-- Skills -->
        <div class="w-full mb-6">
          <h4 class="text-xl font-semibold mb-2">Skills</h4>
          <div class="flex flex-wrap gap-2">
            {% for skill in project.skills %}
            <span class="inline-block px-3 py-1 text-sm bg-minimal-blue text-minimal-blueDark rounded-full">{{ skill }}</span>
            {% endfor %}
          </div>
        </div>
        {% endif %}
        
        {% if project.languages and project.languages.length > 0 %}
        <!-- Languages -->
        <div class="w-full mb-6">
          <h4 class="text-xl font-semibold mb-2">Languages</h4>
          <div class="flex flex-wrap gap-2">
            {% for language in project.languages %}
            <span class="inline-block px-3 py-1 text-sm bg-minimal-green text-minimal-greenDark rounded-full">{{ language }}</span>
            {% endfor %}
          </div>
        </div>
        {% endif %}
    
        {% if project.tools and project.tools.length > 0 %}
        <!-- Tools -->
        <div class="w-full mb-6">
          <h4 class="text-xl font-semibold mb-2">Tools</h4>
          <div class="flex flex-wrap gap-2">
            {% for tool in project.tools %}
            <span class="inline-block px-3 py-1 text-sm bg-minimal-yellow text-minimal-yellowDark rounded-full">{{ tool }}</span>
            {% endfor %}
          </div>
        </div>
        {% endif %}
    
        {% if project.urls and project.urls.length > 0 %}
        <!-- Links -->
        <div class="w-full mb-6">
          <h4 class="text-xl font-semibold mb-2">Links</h4>
          <ul class="list-none space-y-2">
            {% for url in project.urls %}
            <li>
              <a href="{{ url }}" target="_blank" class="text-minimal-primary underline hover:text-minimal-blue">{{ url }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}

      </div>
    </div>
    
  </div>
</section>

<section id="about" class="mb-16">
  <div class="container mx-auto px-6">
    <div class="prose dark:prose-invert dark:text-minimal-secondaryLight mx-auto">
      {{ project.details | safe }}
    </div>
  </div>
</section>