---
layout: base.njk
title: Portfolio - Walter Moore
---

<!-- About Section -->
<section id="about" class="my-16">
  <div class="container mx-auto px-6">
    <h3 class="text-3xl font-bold text-center mb-12">My Project Portfolio</h3>
    <div class="w-full flex flex-row justify-center mb-12">
    <img src="/img/pfp.jpg" alt="Your Bio Picture" class="w-48 h-48 border-4 border-minimal-primary dark:border-minimal-secondaryLight rounded-full shadow-lg">
    </div>
    <div class="flex flex-col lg:flex-row gap-8 w-full">
      <p class="text-lg text-justify">
          {{about['portfolio-intro']}}
      </p>
    </div>
  </div>
</section>

<!-- Portfolio Section -->
<section id="projects" class="mb-16">
  <div class="container mx-auto px-6">
    <div class="grid gap-4 lg:gap-8 grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {% for project in portfolio %}
      
      <div class="flex flex-col rounded-xl border border-2 border-minimal-primary dark:border-minimal-secondaryLight h-full">
        <a href="/projects/{{project['project-slug']}}/" class="flex flex-col">
          <img src="/projects/{{project['project-slug']}}/img/{{project.image}}" alt="Project Image" class=" w-full aspect-square object-cover rounded-t-lg">
          <div class="grow shrink flex flex-col justify-between p-4">
            <div>
              <h4 class="md:text-lg truncate font-bold">{{project.title}}</h4>
              {# <p class="line-clamp-4 mt-2 text-justify">{{project.description}}</p> #}
            </div>
            <div class="mt-4 flex flex-wrap">
              <h2 class="mr-4 mb-2">Skills: <span class="px-3 py-1 text-sm bg-minimal-blue text-minimal-blueDark rounded-full">{{project.skills.length}}</span></h2>
              <h2 class="mr-4 mb-2">Languages: <span class="px-3 py-1 text-sm bg-minimal-green text-minimal-greenDark rounded-full">{{project.languages.length}}</span></h2>
              <h2 class="mr-4 mb-2">Tools: <span class="px-3 py-1 text-sm bg-minimal-yellow text-minimal-yellowDark rounded-full">{{project.tools.length}}</span></h2>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
